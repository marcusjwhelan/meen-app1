{{!--quote/new.hbs--}}

<div class="col-md-4">  
        <h1>New Quote</h1>

        <form {{action 'save' on="submit"}}>

        <dl>
        <dt>Author<br> {{textarea value=author cols="80" rows="1"}}</dt>
        <dt>Quote<br> {{textarea value=quote cols="80" rows="6"}}</dt>
        </dl>
        <button type="submit" class="btn btn-primary">Add</button>
        </form>
</div>